generator client {
  provider = "prisma-client-js"

  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  phone         String?
  role          String    @default("customer") // customer, admin
  emailVerified DateTime?
  image         String?
  reviews       Review[]   // ✨ YENİ
  orders        Order[]
  addresses     Address[]
  favorites     Favorite[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Address {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title      String   // "Ev", "İş" vs
  fullName   String
  phone      String
  address    String
  city       String
  district   String
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Float
  image       String
  images      String[]
  stock       Int      @default(0)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  featured    Boolean  @default(false)
  favorites   Favorite[]
   reviews     Review[]   // ✨ YENİ
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id              String   @id @default(cuid())
  orderNumber     String   @unique
  
  // Müşteri Bilgileri
  userId          String?
  user            User?    @relation(fields: [userId], references: [id])
  customerName    String
  customerEmail   String
  customerPhone   String
  
  // Teslimat Bilgileri
  deliveryAddress String
  deliveryCity    String
  deliveryDistrict String
  deliveryDate    DateTime
  deliveryTime    String
  
  // Sipariş Detayları
  items           Json
  subtotal        Float
  discount        Float    @default(0)      // ✨ YENİ: İndirim tutarı
  couponCode      String?                    // ✨ YENİ: Kullanılan kupon kodu
  shipping        Float    @default(0)
  total           Float
  
  // Ödeme
  paymentMethod   String
  paymentStatus   String   @default("pending")
  
  // Sipariş Durumu
  status          String   @default("pending")
  notes           String?
  
  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
//Favori ürünler modeli
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId]) // Aynı ürün birden fazla favoriye eklenemez
  @@index([userId])
  @@index([productId])
}
// Ürün Yorumları modeli
model Review {
  id          String   @id @default(cuid())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  rating      Int
  title       String?
  comment     String
  
  isApproved  Boolean  @default(true) // ✅ DEĞİŞTİ: false -> true
  isVerified  Boolean  @default(false)
  
  helpfulCount    Int   @default(0)
  notHelpfulCount Int   @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, productId])
  @@index([productId])
  @@index([userId])
}
//kupon modeli
model Coupon {
  id              String    @id @default(cuid())
  code            String    @unique // Kupon kodu (örn: SUMMER2024)
  
  // İndirim Bilgileri
  discountType    String    // "percentage" veya "fixed"
  discountValue   Float     // Yüzde ise 10, 20 gibi; Sabit ise 50, 100 gibi
  
  // Koşullar
  minPurchase     Float     @default(0) // Minimum sepet tutarı
  maxDiscount     Float?    // Maksimum indirim tutarı (yüzde için)
  
  // Kullanım
  usageLimit      Int?      // Toplam kullanım limiti (null ise sınırsız)
  usedCount       Int       @default(0) // Kullanım sayısı
  
  // Geçerlilik
  startDate       DateTime? // Başlangıç tarihi (null ise hemen aktif)
  endDate         DateTime? // Bitiş tarihi (null ise süresiz)
  isActive        Boolean   @default(true)
  
  // Açıklama
  description     String?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
// Site Ayarları modeli
model Settings {
  id              String   @id @default(cuid())
  
  // Site Bilgileri
  siteName        String   @default("Çiçek Dükkanım")
  siteDescription String?
  siteLogo        String?
  
  // İletişim Bilgileri
  phone           String?
  email           String?
  address         String?
  
  // Kargo Ayarları
  freeShippingLimit Float  @default(200) // Ücretsiz kargo için minimum tutar
  shippingCost      Float  @default(0)   // Normal kargo ücreti
  
  // E-posta Ayarları
  smtpHost        String?
  smtpPort        Int?
  smtpUser        String?
  smtpPassword    String?
  emailFrom       String?
  
  // Sosyal Medya
  facebook        String?
  instagram       String?
  twitter         String?
  whatsapp        String?
  
  // SEO
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  
  // Diğer
  maintenanceMode Boolean  @default(false)
  
  updatedAt       DateTime @updatedAt
  
  @@map("settings")
}